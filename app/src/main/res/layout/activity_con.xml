<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ConActivity">

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView6"
        android:text="Atiende con albergue temporal y atención integral a mujeres y sus hijos en situación de alto riesgo por violencia intrafamiliar.  Requisitos:  Mujeres y sus hijos e hijas que sufren violencia intrafamiliar extrema y soliciten la atención a través de instituciones públicas o privadas. Que no cuentan con redes de apoyo familiar y/o social, y necesitan de    protección y seguridad inmediatas, a consecuencia de la violencia extrema de sus parejas." />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="47dp"
        app:srcCompat="@drawable/dif" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="85dp"
        android:layout_marginStart="15dp"
        android:text="Para mayor información:" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="35dp"
        android:text="http://sistemadif.jalisco.gob.mx/sitio2013/programas/mujeres-libres-de-violencia"
        android:textColor="@color/colorPrimary" />
</RelativeLayout>